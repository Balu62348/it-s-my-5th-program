/*ADC RJY P B Subrahmanyam_ _vowels and consonents from string*/
#include<stdio.h>
#include<string.h>

int main()
{
    int n,i,count=0,flag;
    char str[100],c;
    printf("Enter the name:");
    scanf("%s",str);
      n=strlen(str);
    for(i=0;i<n;i++)
    {
        c=str[i];
        if(c=='a'||c=='A'||c=='e'||c=='E'||c=='i'||c=='I'||c=='o'||c=='O'||c=='u'||c=='U')
        {
        count=count+1;
        }
    
    else
        flag=flag+1;
        }
    printf("The number of vowels are : %d \n The number of consonents are : %d",count,flag);
    return 0;
}
